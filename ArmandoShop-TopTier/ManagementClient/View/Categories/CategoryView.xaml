<Window x:Class="ArmandoShop.ManagementClient.View.Categories.CategoryView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CategoryView" Height="300" Width="353">
    <Grid Width="334" Height="259">
        <Label Content="Name:" Height="28" HorizontalAlignment="Left" 
               Margin="12,53,0,0" Name="label1" VerticalAlignment="Top" />
        <Label Content="Description:" Height="28" HorizontalAlignment="Left" 
               Margin="12,147,0,0" Name="label4" VerticalAlignment="Top" />
        <TextBox Text="{Binding Name}" Height="23" HorizontalAlignment="Left"
                 Margin="94,58,0,0" 
                 Name="nameTextBox" VerticalAlignment="Top" Width="231" />
        <TextBox Text="{Binding Description}" Height="28" HorizontalAlignment="Left" Margin="94,147,0,0" 
                     Name="richTextBox1" VerticalAlignment="Top" Width="231" />

        <Button Command="{Binding Done}" Content="{Binding Action}" Height="30" Click="Exit"
                HorizontalAlignment="Left" Margin="94,205,0,0" 
                Name="button1" VerticalAlignment="Top" Width="100" />
        <Button Click="Exit" Content="Cancel" Height="30" HorizontalAlignment="Right" 
                Margin="0,205,12,0" Name="button2" VerticalAlignment="Top" Width="102" />
    </Grid>
</Window>
